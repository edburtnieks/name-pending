---
import i18next, { t } from "i18next";
import BaseLayout from "@layouts/BaseLayout.astro";
import locations from "../_locations.json";

export async function getStaticPaths() {
    return i18next.languages.map((lang) => {
        return locations.map((location) => ({
            params: { lang, location },
        }));
    });
};

const { lang, location } = Astro.params;

i18next.changeLanguage(lang as string);
---

<BaseLayout language={i18next.language}>
    <main class="container">
        <h1>{t(`global.${location}`) }</h1>
        <menu>
            <li>
                <a href={`/${lang}/locations/${location}/nonprofit-organizations`}>
                    {t("global.nonprofitOrganizations")}
                </a>
            </li>
            <li>
                <a href={`/${lang}/locations/${location}/recycling-and-waste-management`}>
                    {t("global.recyclingAndWasteManagement")}
                </a>
            </li>
        </menu>
    </main>
</BaseLayout>
